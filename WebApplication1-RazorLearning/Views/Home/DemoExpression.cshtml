@model WebApplication1_RazorLearning.Models.Product

@{
    ViewBag.Title = "Demoxpression";
}
<table>
    <thead>
        <tr><th>Property</th><th>Value</th></tr>
    </thead>
    <tbody>
        <tr><td>Name</td><td>@Model.Name</td></tr>
        <tr><td>Price</td><td>@Model.Price</td></tr>
        <tr>
        <td>Stock level</td>
        <td>
            @switch ((int)ViewBag.ProductCount) {
                case 0: @: Out of stock
                break;
                case 1: <b>Low Stock (@ViewBag.ProductCount)</b>
                    break;
                default:
                    @ViewBag.ProductCount
                    break;
            }
        </td></tr>
    </tbody>

</table>
